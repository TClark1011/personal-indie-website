---
import "../styles/reset.scss";
import "../styles/fonts.scss";
import "../styles/global.scss";
import Link from "@/components/link.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<div id="top">
			<span class="label"> Thomas Clark </span>
		</div>
		<nav id="sections-nav">
			<Link class="link" href="/">Home</Link>
			<Link class="link" href="/sections/about-me">About Me</Link>
			<Link class="link" href="/sections/keyboards">Keyboards</Link>
			<Link class="link" href="/sections/cats">Cats</Link>
		</nav>
		<slot />
	</body>
</html>

<style lang="scss">
	@use "../styles/theme.scss";

	body {
		width: 100vw;
		min-height: 100vh;
	}

	#top {
		display: flex;
		justify-content: center;
		align-items: center;

		width: 100%;
		height: 26px;

		background-color: theme.$color-primary;
		border-bottom: 1px solid black;
	}

	#top .label {
		display: flex;
		justify-content: center;
		align-items: center;

		height: 100%;
		background-color: black;

		color: white;
	}

	#sections-nav {
		display: flex;

		width: 100%;
		padding: 0 theme.$spacing-2;

		background-color: theme.$color-secondary;
		border-bottom: 1px solid black;
	}

	#sections-nav .link {
		--border-color: transparent;

		border-left: 1px solid var(--border-color);
		border-right: 1px solid var(--border-color);

		padding: 0 theme.$spacing-1;

		&:hover,
		&[data-active] {
			--border-color: black;
		}

		&::first-letter {
			text-decoration: underline;
			text-decoration-thickness: 1px;
		}
	}
</style>
